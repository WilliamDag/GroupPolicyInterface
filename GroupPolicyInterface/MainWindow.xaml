<Window x:Class="GroupPolicyInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupPolicyInterface"
        mc:Ignorable="d"
        Title="Group Policy Interface" Height="700" Width="1070" Icon="Diddo.ico"
        WindowStartupLocation="CenterScreen"
        Background="#262626">
    <ScrollViewer Margin="5" CanContentScroll="False" >
        <Viewbox>
            <Grid>
                <ContentControl Content="{Binding ContentControlBinding}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Height="600" Width="1030" Grid.RowSpan="3" Grid.ColumnSpan="4" TextBlock.FontSize="15" TextBlock.TextAlignment="Center"/>
            </Grid>
        </Viewbox>
    </ScrollViewer>
</Window>
